.recommend-wrapper {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.recommend-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #f2f2f2;
  width: 198rpx;
  height: 198rpx;  
  padding:20rpx;
}

.recommend-wrapper:first-child {
  margin-left: 24rpx;
}

.recommend-wrapper:last-child {
  margin-right: 24rpx;
}

.recommend-wrapper .poster image{
  width: 100rpx;
  height: 100rpx;
  
}

.recommend-wrapper .name {
  width:178rpx;
  height: 38rpx;
  color: #1a1a1a;
  font-size: 24rpx;
  line-height: 38rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.recommend-wrapper .wish-write image{
  width: 19rpx;
  height: 18rpx;
  margin-right: 10rpx;
  align-items: center;
}
.recommend-wrapper .wish-write{
  width: 178rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  height: 32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
  color: #666;
  text-align: center;
}
