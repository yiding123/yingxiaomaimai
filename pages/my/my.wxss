.user {
  width: 690rpx;
  background: #ffffff;
  padding: 30rpx;  
}

.user .avatar image{
  float: left;
  width: 120rpx;
  height: 120rpx;
}
.user .user-info{
  flex: 2;
  display: flex;
  flex-direction: column;
  height: 120rpx;
  margin-left: 30rpx;
}
.user .user-info .text-yh{
  width: 250rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 20rpx;
  margin-bottom: 14rpx;
  line-height: 30rpx;
  color: #1a1a1a;
}
.user .user-info .text-zw{
  align-items: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
  color: #ff7c17;
  margin-left:20rpx;
  font-weight: 400;
  font-size: 26rpx;
  line-height: 30rpx;
}
.user .user-info .text-zw image{
  width: 12rpx;
  height: 18rpx;
  align-items: center;
  margin-right: 8rpx;
}

.user .user-info .text-bq text{
  padding: 5rpx 14rpx;
  vertical-align: middle;
  color: #666;
  font-size: 24rpx;
  background-color: #f7f7f7;
  border-radius: 30rpx;
  border: 1rpx solid #ebebeb;
  margin-right: 10rpx;
}

.user .edit{
  width: 16rpx;
  height: 25rpx;
  float: right;
  margin-top: 42rpx;
}

.my{
  border-top: solid 1px #f2f2f2;
  border-bottom: solid 1px #f2f2f2;
  background-color: #ffffff;
}
.my .my-item{
  width: 690rpx;
  background: #ffffff;
  padding:30rpx 30rpx 30rpx 0;
  margin-left: 30rpx;
  height:50rpx;
  vertical-align: middle;
  border-bottom: 1px solid #f2f2f2;
}
.my .my-item .myitem-icon{
  width: 16rpx;
  height: 25rpx;
  margin-top:12rpx;
  float: right;
}
.my .my-item .myitem-name{
  text-align: left;
  font-size: 30rpx;
  color: #1a1a1a;
  line-height: 50rpx;
  float: left;
}

.border{
  background-color: #f7f7f7;
  height: 20rpx;
  width: 750rpx;
}
