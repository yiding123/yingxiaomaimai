.userinfo{
    background-color: #f7f7f7;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.border{
    height: 20rpx;
    background-color: #f7f7f7;
    border-top: 1rpx #f2f2f2 solid;
    border-bottom: 1rpx #f2f2f2 solid;
}

.base{
    display: flex;
    background-color: #fff;
    height: 160rpx;
    flex-direction: row;
    overflow: hidden;
}

.base .info{
    display: flex;
    flex-direction: column; 
    padding: 20rpx 0;
    height: 120rpx;

}

.text-row{
  height: 60rpx;
  align-items: center;
}

.base .text-yh{ 
    align-content: center;  
    width: 250rpx;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 30rpx;
    color: #1a1a1a;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.text-zw image{
  width: 12rpx;
  height: 18rpx;
  margin-right: 8rpx;
  align-items: center;
}
.text-zw{
  margin-left:20rpx;
  align-items: center;
}
.text-zw text{
  align-items: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
  color: #ff7c17;
  font-weight: 400;
  font-size: 24rpx;
  
}

.base .text-xb{
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #888888;
  height: 60rpx;

}


.avatar{
    width:120rpx;
    height: 120rpx;
    margin: 20rpx 30rpx;
}

.sub{
    background-color: #fff; 
}

.sub .item{
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #f2f2f2;
}

.sub .item .item-name{
    white-space: nowrap;
    width: 120rpx;
    margin-right: 40rpx;
    font-size:30rpx;
    color: #1a1a1a;
   
}

.sub .item .item-main{
    font-size:30rpx;
    color: #888;
}

.sub .item .item-value{
    font-size: 26rpx;
}

.submit{
    background-color:#ff3626; 
    color:#fff;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 75rpx;   
    width: 690rpx;
}
.item-dis{
    display: block;
    margin-top: 10rpx;
}


.sub .item .care{
   font-size:26rpx;
   color: #0fafff;
   float: right;
   text-align: right;
   border: 1rpx solid #0fafff;
   border-radius: 30rpx;
   padding: 4rpx 15rpx;
}

.sub .item .textcolor{
    color: #ff330f;
}

.sub .item .textwidth{
    width: 360rpx;
}

.item-value .tags{
  font-size: 26rpx;
  color: #888;
  padding: 4rpx 14rpx;
  border: 1rpx solid #cccccc;
  border-radius: 42rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
}

.userinfo .sub .item-padding{
  padding-bottom: 6rpx;
}

.btn-bottom{
  margin-bottom: 50rpx;
}

.other-button-hover{
  background-color: #098aed;
}

.tips-colomn .tips{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 20rpx;
  line-height: 30rpx;
  height: 30rpx;
}

.tips-icon{
  height: 20rpx;
  width: 20rpx;
  margin-right: 10rpx;
  align-items: center;
  color: #09bb07;
}

.tips-colomn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
}
.tips-bj{
  margin-top: 10rpx;
}
