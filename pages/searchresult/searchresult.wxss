.searchfor{
  display: flex;
  width: 692rpx;
  height: 56rpx;
  padding: 16rpx 30rpx;
  background: #008cec;
  justify-content: space-between;
  
}
.search-inp{
  background: #ffffff;
  border-radius: 40rpx;
  width: 552rpx;
  line-height: 26rpx;
  height: 56rpx;
  font-size: 26rpx; 
  display: flex;
  justify-content:flex-start;
}

.searchfor .search-inp input{
   font-size: 24rpx; 
   height: 56rpx;
   line-height: 56rpx;  
   align-items: center;
  
}

.position{
  width: 118rpx;
  height: 24rpx;
  padding: 16rpx 0;
  margin-right: 20rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  display:flex;
  justify-content: center;
}

.search-position{
  color: #888888;
  font-size: 24rpx;
  line-height: 24rpx;
  align-items: center;  
  margin-right: 9rpx;
}

.position image{
    width: 18rpx;
    height: 11rpx;
    margin-top: 7rpx;
}

.search-inp .session-search-icon{
  color: #888888;
  margin: 16rpx 0;
  margin-left: 20rpx;
  margin-right: 10rpx;
  align-items: center;
}

.border-unline{
    height: 20rpx;
    background-color: #f7f7f7;
}

.avatar image{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 20rpx 20rpx 0;
}
.result{
  padding: 0 30rpx;
}
.result-title{
  padding: 16rpx 0 10rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx #f2f2f2 solid;
}

.result-text .username{
  width: 180rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
  font-weight: 400;
  font-size: 30rpx; 
  margin-right: 20rpx;
}

.result-text .usertitle image{
  width: 12rpx;
  height: 18rpx; 
  margin: 6rpx 0;
  margin-right: 8rpx;
}

.result-text .usertitle text{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
  height: 30rpx;
  line-height: 30rpx;
  text-align: left;
  vertical-align: middle;
  color: #ff7c17;
  font-weight: nomal;
  font-size: 24rpx;
}

.text-row{
  display: flex;
  flex-direction: column;
}

.text-row .description text{
  padding: 4rpx 14rpx;
  color: #999999;
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  display: inline-block;
  background-color: #f7f7f7;
  border-radius: 34rpx;
  border: 1rpx solid #ebebeb;
  margin-right: 10rpx;
}

.text-row .description {
  width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}

.result-text {
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 690rpx;
  
}

.text-row{
   display: flex;
   flex-direction: column;
}
.text-column{
   margin-top: 22rpx;

}
.result-text .friend image{
  width: 42rpx;
  height: 42rpx;
  
}
.result-text .friend{
  padding: 29rpx 10rpx;
  margin: 20rpx 0;
  align-items: center;
}